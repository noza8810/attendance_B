<%= provide(:titile,"Edit") %>

<h1>基本情報の更新</h1>
<div class ="row" %>
  <%= form_with(model: @user, local: true, method: :patch) do |f| %>
    <%= render 'shared/error_messages' %>
    
    <%= f.label :name, class: "label-signup" %>
    <%= f.text_field :name, class: "form-control" %>
    
    <%= f.label :email, class: "label-signup" %>
    <%= f.email_field :email, class: "form-control" %>
    
    <%= f.label :department, class: "label-signup" %>
    <%= f.text_field :department, class: "form-control" %>
    
    <%= f.label :password, class: "label-signup" %>
    <%= f.password_field :password, class: "form-control" %>
    
    <%= f.label :password_confirmation, class: "label-signup" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    
    <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>

  <% end %>
  
</div>
