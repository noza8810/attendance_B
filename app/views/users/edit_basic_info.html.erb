<% provide(:title, "更新") %>

<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :work_time, "指定勤務時間", class: "label-basic-info" %>
      <%= f.time_field :work_time, class: "form-control" %>
      
      <%= f.label :basic_time, "基本勤務時間", class: "label-basic-info" %>
      <%= f.time_field :basic_time, class: "form-control" %>
      
      <%= f.submit "編集", class: "btn btn-primary btn-block btn-edit" %>
      
    <% end %>
  </div>
</div>